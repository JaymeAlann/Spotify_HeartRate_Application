<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.james.bpm">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UserInformationActivity" />

        <receiver android:name=".FragmentSongImageReceiver">
            <intent-filter>
                <action android:name="android.intent.action.IMAGE_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity android:name=".OnBoardingActivity" />
        <activity
            android:name=".SongListActivity"
            android:theme="@style/activityTheme" />
        <activity android:name=".SpotifyAuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/activityTheme" />

        <service
            android:name=".PlayerService"
            android:exported="true" />
    </application>

</manifest>